            <Border Grid.Column="5" Grid.Row="2" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="6" Grid.Row="2" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="7" Grid.Row="2" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="8" Grid.Row="2" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="9" Grid.Row="2" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
        </Grid>
        <Grid Grid.Column="5" Grid.RowSpan="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="30" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="650" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="1" Text="SP NotSt" FontFamily="Calibri" FontSize="16" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
            <TextBlock Grid.Column="2" Text="SP InProg" FontFamily="Calibri" FontSize="16" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
