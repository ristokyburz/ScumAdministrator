            <Border Grid.Column="3" Grid.Row="1" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="4" Grid.Row="1" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="5" Grid.Row="1" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="6" Grid.Row="1" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="0" Grid.Row="2" BorderThickness="0,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="1" Grid.Row="2" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
            <Border Grid.Column="2" Grid.Row="2" BorderThickness="0.5,0,0,0.5" BorderBrush="#FFBDB0B0" />
