            <TextBlock Grid.Column="3" Grid.Row="2" Text="{Binding SelectedSprint.NumberStoryPointsDone}" FontFamily="Calibri" FontSize="16" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
