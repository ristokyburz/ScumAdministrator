<Window x:Class="ScrumAdministrator.Cockpit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:local="clr-namespace:ScrumAdministrator.Cockpit"
        mc:Ignorable="d ignore"
        Height="900"
        Width="1670"
        Title="Art Planning" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1670"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <local:StoryOverviewView Grid.Column="1" DataContext="{Binding StoryOverviewViewModel}" />
    </Grid>
</Window>
